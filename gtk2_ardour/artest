#!/bin/sh

cd "`dirname \"$0\"`"

TOP=..
. $TOP/build/gtk2_ardour/ardev_common_waf.sh

LIBS_DIR=$TOP/build/libs

ALLGOOD=yes

run_tests () {
  echo ""
  echo "-------------------------------------------"
  echo "Running tests for $1..."
  echo "-------------------------------------------"
  echo ""
  $2 $LIBS_DIR/$1/run-tests || ALLGOOD=no
  echo ""
}

if [ $# -gt 0 ]; then
	run_tests $1 $2
	exit
fi

run_tests audiographer
run_tests midi++2
run_tests evoral
run_tests pbd
run_tests ardour

if test "$ALLGOOD" != "yes"; then
	echo ""
	echo ""
	echo " *** SOME TEST(s) FAILED ***"
	echo ""
	echo ""
fi
